        function cardValue(card) {
            if (card.value === 'A') return 11;
            if (['J', 'Q', 'K'].includes(card.value)) return 10;
            return parseInt(card.value);
        }

        function calculateScore(cards) {
            let score = cards.reduce((sum, card) => sum + cardValue(card), 0);
            let aces = cards.filter(card => card.value === 'A').length;
            while (score > 21 && aces > 0) {
                score -= 10;
                aces--;
            }
            return score;
        }

        function renderCards(cards, elementId) {
            const container = document.getElementById(elementId);
            container.innerHTML = cards.map(card => 
                `<div class="card ${card.color}">${card.value}${card.suit}</div>`
            ).join('');
        }

        function dealBlackjack() {
            const betAmount = parseInt(document.getElementById('blackjackBet').value);
            if (balance < betAmount) {
                showMessage('blackjack', 'lose', '¬°No tienes suficiente dinero! ü§î');
                return;
            }

            balance -= betAmount;
            updateBalance();

            blackjackGame.deck = createDeck();
            blackjackGame.playerCards = [blackjackGame.deck.pop(), blackjackGame.deck.pop()];
            blackjackGame.dealerCards = [blackjackGame.deck.pop()];
            blackjackGame.inProgress = true;
            blackjackGame.betAmount = betAmount;

            renderCards(blackjackGame.playerCards, 'playerCards');
            renderCards(blackjackGame.dealerCards, 'dealerCards');
            
            document.getElementById('playerScore').textContent = 'Puntos: ' + calculateScore(blackjackGame.playerCards);
            document.getElementById('dealerScore').textContent = 'Puntos: ?';
            
            document.getElementById('dealBtn').disabled = true;
            document.getElementById('hitBtn').disabled = false;
            document.getElementById('standBtn').disabled = false;

            const playerScore = calculateScore(blackjackGame.playerCards);
            if (playerScore === 21) {
                standBlackjack();
            }
            
            showMessage('blackjack', 'lose', '¬°Cartas repartidas! ¬øPides carta o te plantas? üÉè');
        }

        function hitBlackjack() {
            if (!blackjackGame.inProgress) return;

            blackjackGame.playerCards.push(blackjackGame.deck.pop());
            renderCards(blackjackGame.playerCards, 'playerCards');
            
            const playerScore = calculateScore(blackjackGame.playerCards);
            document.getElementById('playerScore').textContent = 'Puntos: ' + playerScore;

            if (playerScore > 21) {
                showMessage('blackjack', 'lose', `¬°TE PASASTE! (${playerScore}) El casino gana otra vez üò¢`);
                endBlackjack();
            } else if (playerScore === 21) {
                standBlackjack();
            }
        }

        function standBlackjack() {
            if (!blackjackGame.inProgress) return;

            document.getElementById('hitBtn').disabled = true;
            document.getElementById('standBtn').disabled = true;

            while (calculateScore(blackjackGame.dealerCards) < 17) {
                blackjackGame.dealerCards.push(blackjackGame.deck.pop());
            }

            renderCards(blackjackGame.dealerCards, 'dealerCards');
            
            const playerScore = calculateScore(blackjackGame.playerCards);
            const dealerScore = calculateScore(blackjackGame.dealerCards);
            
            document.getElementById('dealerScore').textContent = 'Puntos: ' + dealerScore;

            if (dealerScore > 21 || playerScore > dealerScore) {
                const winAmount = blackjackGame.betAmount * 2;
                balance += winAmount;
                updateBalance();
                showMessage('blackjack', 'win', `¬°GANASTE! T√∫: ${playerScore} vs Crupier: ${dealerScore} üéâ`);
            } else if (playerScore === dealerScore) {
                balance += blackjackGame.betAmount;
                updateBalance();
                showMessage('blackjack', 'lose', `EMPATE (${playerScore}). Te devolvemos tu apuesta ü§ù`);
            } else {
                showMessage('blackjack', 'lose', `¬°PERDISTE! T√∫: ${playerScore} vs Crupier: ${dealerScore} üò¢`);
            }

            endBlackjack();
        }

        function endBlackjack() {
            blackjackGame.inProgress = false;
            document.getElementById('dealBtn').disabled = false;
            document.getElementById('hitBtn').disabled = true;
            document.getElementById('standBtn').disabled = true;
        }

        // DADOS
        function selectPrediction(type) {
            document.querySelectorAll('.prediction-btn').forEach(btn => btn.classList.remove('selected'));
            event.target.classList.add('selected');
            diceSelection = type;
        }

        function rollDice() {
            if (!diceSelection) {
                showMessage('dice', 'lose', '¬°Primero selecciona una predicci√≥n! üé≤');
                return;
            }

            const betAmount = parseInt(document.getElementById('diceBet').value);
            if (balance < betAmount) {
                showMessage('dice', 'lose', '¬°No tienes suficiente dinero! ü§î');
                return;
            }

            balance -= betAmount;
            updateBalance();

            const die1El = document.getElementById('die1');
            const die2El = document.getElementById('die2');
            
            die1El.classList.add('rolling');
            die2El.classList.add('rolling');
            
            document.getElementById('diceMessage').textContent = '¬°Lanzando dados...! üé≤';

            setTimeout(() => {
                const die1 = Math.floor(Math.random() * 6) + 1;
                const die2 = Math.floor(Math.random() * 6) + 1;
                const sum = die1 + die2;

                die1El.textContent = die1;
                die2El.textContent = die2;
                die1El.classList.remove('rolling');
                die2El.classList.remove('rolling');

                let won = false;
                let multiplier = 2;

                switch(diceSelection) {
                    case 'par':
                        won = sum % 2 === 0;
                        break;
                    case 'impar':
                        won = sum % 2 !== 0;
                        break;
                    case 'bajo':
                        won = sum >= 2 && sum <= 6;
                        break;
                    case 'alto':
                        won = sum >= 8 && sum <= 12;
                        break;
                    case 'doble':
                        won = die1 === die2;
                        multiplier = 5;
                        break;
                    case 'siete':
                        won = sum === 7;
                        multiplier = 4;
                        break;
                }

                if (won) {
                    const winAmount = betAmount * multiplier;
                    balance += winAmount;
                    updateBalance();
                    showMessage('dice', 'win', `¬°GANASTE! Dados: ${die1} + ${die2} = ${sum}. Ganas ‚Ç¨${winAmount} üéâ`);
                } else {
                    showMessage('dice', 'lose', `Dados: ${die1} + ${die2} = ${sum}. ¬°Perdiste! üò¢`);
                }

                diceSelection = null;
                document.querySelectorAll('.prediction-btn').forEach(btn => btn.classList.remove('selected'));
            }, 1000);
        }

        updateBalance();
    </script>
</body>
</html>